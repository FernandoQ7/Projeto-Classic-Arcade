typedef struct {
    int nivel_furia;
} Gousma;

typedef struct {
    char nome[50];
    Gousma gousmas[MAX_GOUSMAS];
    int num_gousmas;
} Jogador;

int sortear_jogador(Jogador jogadores[]) {
    srand(time(NULL));
    return rand() % 2;
}
int i;
void exibir_gousmas(Jogador *jogador) {
    printf("Gousmas de %s:\n", jogador->nome);
    for ( i = 0; i < jogador->num_gousmas; i++) {
        printf("Gousma %d: Nível de Fúria %d\n", i+1, jogador->gousmas[i].nivel_furia);
    }
}

void atacar(Jogador *atacante, Jogador *defensor) {
    int escolha_gousma_atacante, escolha_gousma_defensor;
    printf("Escolha a Gousma do atacante:\n");
    	exibir_gousmas(atacante);
    	scanf("%d", &escolha_gousma_atacante);
    	escolha_gousma_atacante--;
    printf("Escolha a Gousma do defensor:\n");
    	exibir_gousmas(defensor);
    	scanf("%d", &escolha_gousma_defensor);
    	escolha_gousma_defensor--;
    	defensor->gousmas[escolha_gousma_defensor].nivel_furia += atacante->gousmas[escolha_gousma_atacante].nivel_furia;
    if (defensor->gousmas[escolha_gousma_defensor].nivel_furia > 5) {
        printf("A Gousma %d do jogador %s foi desintegrada!\n", escolha_gousma_defensor+1, defensor->nome);
        defensor->gousmas[escolha_gousma_defensor] = defensor->gousmas[defensor->num_gousmas-1];
        defensor->num_gousmas--;
    }
}
   void dividir(Jogador *jogador) {
	if (jogador->num_gousmas >= MAX_GOUSMAS) {
printf("O jogador já possui o número máximo de Gousmas em campo!\n");
return;
}
	int escolha_gousma, nivel_furia;
		printf("Escolha a Gousma para se dividir:\n");
		exibir_gousmas(jogador);
		scanf("%d", &escolha_gousma);
		escolha_gousma--;
	if (jogador->gousmas[escolha_gousma].nivel_furia == 0) {
		printf("A Gousma selecionada não possui fúria suficiente para se dividir!\n");
	return;
}
		printf("Digite o nível de fúria a ser transferido para a nova Gousma:\n");
		scanf("%d", &nivel_furia);
	if (nivel_furia > jogador->gousmas[escolha_gousma].nivel_furia) {
		printf("O nível de fúria informado é maior do que o nível de fúria da Gousma selecionada!\n");
	return;
}
		jogador->gousmas[jogador->num_gousmas].nivel_furia = nivel_furia;
		jogador->gousmas[escolha_gousma].nivel_furia -= nivel_furia;
		jogador->num_gousmas++;
		printf("Nova Gousma criada com sucesso!\n");
}
	Jogador jogadores[2];
	int jogador_atual, jogada, vencedor;
		printf("Digite o nome do primeiro jogador:\n");
		scanf("%s", jogadores[0].nome);
		jogadores[0].num_gousmas = 2;
		jogadores[0].gousmas[0].nivel_furia = 1;
		jogadores[0].gousmas[1].nivel_furia = 1;
		printf("Digite o nome do segundo jogador:\n");
		scanf("%s", jogadores[1].nome);
		jogadores[1].num_gousmas = 2;
		jogadores[1].gousmas[0].nivel_furia = 1;
		jogadores[1].gousmas[1].nivel_furia = 1;
		jogador_atual = sortear_jogador(jogadores);
		printf("O jogador sorteado para começar a partida é: %s!\n", jogadores[jogador_atual].nome);
	while (1) {
		printf("É a vez de %s:\n", jogadores[jogador_atual].nome);
		printf("Digite 1 para atacar ou 2 para dividir:\n");
		scanf("%d", &jogada);
	switch (jogada) {
case 1:
atacar(&jogadores[jogador_atual], &jogadores[1-jogador_atual]);
break;
case 2:
dividir(&jogadores[jogador_atual]);
break;
default:
		printf("Opção inválida! Tente novamente.\n");
}
	if (jogadores[jogador_atual].num_gousmas == 0) {
		printf("O jogador %s perdeu a partida!\n", jogadores[jogador_atual].nome);
		vencedor = 1-jogador_atual;
break;
}
		jogador_atual = 1-jogador_atual;
}
		printf("Parabéns, %s! Você venceu a partida!\n", jogadores[vencedor].nome);
	

		printf("Jogar Novamente ? \n (1-SIM) \n (2-NÃO) ");
		scanf("%d", &resposta);	  
}

	    }while (resposta == 1);
		break;	

		case 4:
		printf("Encerrando...\n");
		break;

        default:
		printf("Opcao inválida!\n");
		break;
   }
} while (opcao != 4);

return 0;
}
